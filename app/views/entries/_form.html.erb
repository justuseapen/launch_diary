<% if entry.errors.any? %>
  <ul>
    <% entry.errors.full_messages.each do |error| %>
      <li><%= error %></li> 
    <% end %>
  </ul>
<% end %>

<%= form_for(entry) do |f| %>
  <div>
    <%= f.label(:title) %>
    <%= f.text_field(:title) %>
  </div>

  <div>
    <%= f.label(:description) %>
    <%= f.text_area(:description) %>
  </div>

  <div>
    <%= f.label(:category_id) %>
    <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  </div>


  <%= f.submit 'Save' %>
<% end %>